includeConfig 'config/general.config'


profiles {
    local {
        process.executor = 'local'
    }

    slurm {
    	includeConfig 'config/slurm.config'
    }
}

/*
================================================================
    Params file batching 
================================================================
*/
params.ftype='fast5'
params.watch=false
params.batch=5000
params.wait=1
fileName='done.fast5'

/*
================================================================
    Params basecalling, adapter and barcode trimming
================================================================
*/
params.model='dna_r9.4.1_450bps_fast.cfg'
params.basecall=false
params.runid='runid_0'
params.trim=false
params.pass=true

/*
================================================================
    Params quality Control
================================================================
*/
params.qc=false

/*
================================================================
    Params taxonomy classification
================================================================
*/
params.tax=false
params.meta=false

/*
================================================================
    Params assembly
================================================================
*/
params.assembly=false

/*
================================================================
    Map to reference genome, plot coverage
================================================================
*/
params.map=false
params.reference="$params.input/*.fna"

/*
================================================================
    Resistance gene identifier
================================================================
*/
params.res = false
params.card = '.'
