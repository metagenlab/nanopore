params.samples='samples.csv'
params.input='/scratch/hdd2/farid/MinBC-study/reads'
params.outdir='results-mapping-assembly'
params.collect=false
params.cores=30
/*
================================================================
    Params file batching 
================================================================
*/
params.watch=false
params.batch=5000
params.wait=1
fileName='done.fast5'

/*
================================================================
    Params basecalling, adapter and barcode trimming
================================================================
*/
params.model='dna_r9.4.1_450bps_fast.cfg'
params.basecall=false
params.runid='runid_0'
params.trim=false
params.pass=true

/*
================================================================
    Params filter reads
================================================================
*/
params.filter=false
params.phred=10

/*
================================================================
    Params quality Control
================================================================
*/
params.summary=false
params.qc='pycoqc'

/*
================================================================
    Params taxonomy classification
================================================================
*/
params.tax=false
params.cendb='/data/databases/centrifuge_db'
params.cenin='hpvc'

/*
================================================================
    Params assembly
================================================================
*/
params.assembly=true
params.meta=false
params.hybrid=false
/*
================================================================
    Map to reference genome, plot coverage
================================================================
*/
params.reference=true
params.map=true
params.coverage=false
/*
================================================================
    Resistance gene identifier
================================================================
*/
params.res = false
params.card='/data/databases/CARD'


profiles {
    local {
        process.executor = 'local'
    }

    slurm {
    	includeConfig 'config/slurm.config'
    }
}

singularity {
	enabled = true
	cacheDir = "$projectDir/singularity"
	runOptions= "--bind $params.cendb,$params.input"
}

docker {
	enabled = false
}

process {
	errorStrategy = 'ignore'
	maxRetries = 1
	maxForks = 100
}
executor {
	cpus = 100
}

timeline {
	enabled = false 
}

report {
	enabled = false 
}

dag {
	enabled = false 
}
